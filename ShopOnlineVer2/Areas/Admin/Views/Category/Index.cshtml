@model ShopOnlineVer2.Areas.Admin.Models.ModelView.CategoryMv
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section jsFooter
{
    <script src="~/Acess/Admin/js/plugins/mustache.min.js"></script>
    <script src="~/Acess/Admin/js/Controller/CategoryController.js"></script>
    <script src="~/Acess/Admin/js/plugins/jquery.twbsPagination.min.js"></script>
}

@section header
{<h2>Danh mục sản phẩm</h2>}


<div class="container">
    <div class="row">
        <div class="col-md-12 m-3 row">
            <div class="offset-md-8"></div>
            <div class="col-md-4 btn-circle">
                <button class="btn btn-danger" id="btnAddNew">Thêm mới</button>
            </div>
        </div>

        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Name</td>
                        <td>Status</td>
                        <td>#</td>
                    </tr>
                </thead>
                <tbody id="dbTable"></tbody>
            </table>
            <div id="pagination" class="pagination">
            </div>

            <script id="data-template" type="x-tmpl-mustache">
                <tr>
                    <td>{{ID}}</td>
                    <td>{{Name}}</td>
                    <td>{{Status}}</td>
                    <td>
                        <button class="btn btn-success btn-edit mb-2" data-id="{{ID}}">Sửa</button>
                        <button class="btn btn-danger btn-delete mb-2" data-id="{{ID}}">Xóa</button>
                    </td>
                </tr>
            </script>
        </div>
    </div>
</div>
<!-- Modal Update -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-md-4">Tên danh mục con</label>
                    <input type="text" class="form-control col-md-4" id="Nametxt">
                </div>
                    <form class="form-group" id="editForm">
                <div class="form-group row">
                    <label class="col-md-4">Trạng thái</label>
                    <input type="checkbox" class="col-md-4" id="statusckb">
                </div>
                <input type="hidden" id="idNum" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" id="btnSave" class="btn btn-primary">Xác nhận</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal Insert -->
<div class="modal fade" id="insertCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Thêm mới danh mục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-md-4">Tên danh mục con</label>
                    <input type="text" class="form-control col-md-4" id="txtName">
                </div><div class="form-group row">
                    <label class="col-md-4">Trạng thái</label>
                    <input type="checkbox" class="col-md-4" id="ckbStatus">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" id="btnSubmit" class="btn btn-primary">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>
</div>
