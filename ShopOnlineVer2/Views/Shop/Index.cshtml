@using Model.Entities
@using Model.ModelView

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
        var defaultProduct = ViewBag.defaultProduct;
    }

    <div class="m-5">
        <!--show Now-->
        <section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
            <div class="container-fluid py-lg-5 py-md-4 py-sm-4 py-3">
                <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Toys Shop</h3>
                <div class="row">
                    @{Html.RenderAction("CategoryMenu", "Shop");}
                    <div class="left-ads-display col-lg-9">
                        <div class="row">
                            @foreach (ProductMv item in defaultProduct)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-6 product-men women_two">
                                    <div class="product-toys-info">
                                        <div class="men-pro-item">
                                            <div class="men-thumb-item">
                                                <img src="/Acess/Admin/img/product/@item.Image" style="height: 365px " class="img-thumbnail"  alt="">
                                                <div class="men-cart-pro">
                                                    <div class="inner-men-cart-pro">
                                                        <a href="@Url.Action("ProductVIew","Shop",new {id = item.ID})" class="link-product-add-cart">Xem thử</a>
                                                    </div>
                                                </div>
                                                <span class="product-new-top">New</span>
                                            </div>
                                            <div class="item-info-product">
                                                <div class="info-product-price">
                                                    <div class="grid_meta">
                                                        <div class="product_price">
                                                            <h4>
                                                                <a href="@Url.Action("ProductVIew","Shop",new {id = item.ID})">@item.Name</a>
                                                            </h4>
                                                            <div class="grid-price mt-2">

                                                                <span class="money ">@item.Price</span>
                                                            </div>
                                                        </div>
                                                        <ul class="stars">
                                                            <li>
                                                                <a href="#">
                                                                    <i class="fas fa-star"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#">
                                                                    <i class="fas fa-star"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#">
                                                                    <i class="fas fa-star"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#">
                                                                    <i class="fas fa-star"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#">
                                                                    <i class="far fa-star-half-o"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    @if (item.Price != "Liên hệ")
                                                    {
                                                        <div class="toys single-item hvr-outline-out">
                                                            <form action="#" method="post">
                                                                <input type="hidden" name="cmd" value="_cart">
                                                                <input type="hidden" name="add" value="1">
                                                                <input type="hidden" name="toys_item" value="toys(barbie)">
                                                                <input type="hidden" name="amount" value="575.00">
                                                                <button type="submit" class="toys-cart ptoys-cart">
                                                                    <i class="fas fa-cart-plus"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- //show Now-->
    </div>




